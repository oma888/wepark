<div class="row d-flex mx-3 my-2">
  <div class="col-12" style="height: 60px;">
    <%= form_tag garages_path, method: :get do %>
    <div class="d-flex align-items-center justify-content-between">
      <%= text_field_tag :city, params[:city], class: "form-control", placeholder: "Ville" %> <div class="mr-2"></div>
      <%= text_field_tag :rue, params[:rue], class: "form-control", placeholder: "Adresse" %> <div class="mr-2"></div>
      <%= text_field_tag :rayon, params[:rayon], class: "form-control", placeholder: "Rayon (en Km)" %> <div class="mr-2"></div>
      <%= text_field_tag :surface, params[:surface], class: "form-control", placeholder: "Surface min" %><div class="mr-2"></div>
      <%= text_field_tag :price_cents, params[:price_cents], class: "form-control", placeholder: "Prix mensuel max" %><div class="mr-2"></div>
      <%= date_field_tag :datedebut, params[:datedebut], class: "form-control", placeholder: "Date de dÃ©but" %><div class="mr-2"></div>
      <%= date_field_tag :datefin, params[:datefin], class: "form-control", placeholder: "Date de fin" %><div class="mr-2"></div>
      <%= submit_tag "Go", class: "btn btn-primary" %>
      </div>
    <% end %>
  </div>
</div>

<div class="row d-flex mx-3 my-4">

    <div class="col-6 garages-list">

        <% @garages.each do |garage| %>

          <%= render 'shared/garagecard', garage: garage %>

        <% end %>

    </div>
    <div id="map"
         class="olimap"
         data-markers="<%= @markers.to_json %>"
         data-mapbox-api-key="<%= ENV['MAPBOX_API_KEY'] %>"
    ></div>
</div>
